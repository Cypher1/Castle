#!/bin/bash

CONFIG_PATH="$(cd;pwd)/.config"

LINKED_FILES=(
  pylintrc
  zshrc
  gitconfig
)

PROGRAMS=(
  zsh
  vim
  neovim
  hlint
  git
  gcc
  g++
  direnv
  python3
  python3-pip
  wget
)

PYTHON_PACKS=(
  setuptools
  virtualenv
  flask
  numpy
  pandas
  https://github.com/joh/when-changed/archive/master.zip
)

HASKELL_PACKS=(
  base
  hoogle
  parallel
  hspec
)

NPM_PACKS=(
  marked
  mocha
  react
  underscore
)


# start at home
echo "Linking Dot-files"
for FILE in "${LINKED_FILES[@]}"
do
    mv ".$FILE" "old_$FILE"
    ln $(echo "$CONFIG_PATH/$FILE") $(echo "$(cd; pwd)/.$FILE")
done

if hash brew 2>/dev/null; then
  echo "Installing Software"
  brew install --appdir="/Applications" ${PROGRAMS[*]}
  echo "Installing mac specific programs"
  brew cask install homebrew/cask/alfred
else
  echo "Updating Apt"
  sudo apt-get update
  echo "Installing Software"
  sudo apt-get -f install ${PROGRAMS[*]}
fi

# install oh-my-zsh
sh -c "$(wget https://raw.githubusercontent.com/robbyrussell/oh-my-zsh/master/tools/install.sh -O -)"

ln ~/.config/bullet-train.zsh-theme ~/.oh-my-zsh/custom/bullet-train.zsh-theme

# Install plug
curl -fLo ~/.local/share/nvim/site/autoload/plug.vim --create-dirs \
    https://raw.githubusercontent.com/junegunn/vim-plug/master/plug.vim

nvim +PlugInstall

echo "Installing Python Libraries"
pip install --upgrade pip
pip install ${PYTHON_PACKS[@]}

echo "Install NPM Packages"
wget -qO- https://raw.githubusercontent.com/creationix/nvm/v0.33.11/install.sh | bash
source ~/.nvm/nvm.sh
nvm install node
npm update
npm install ${NPM_PACKS[@]} -g

echo "Starting zsh"
zsh
