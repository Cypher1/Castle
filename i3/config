# COLOURS #
set $color #FFFFFF
set $color_good #00FF00
set $color_bad #FF0000
set $color_degraded #FFFF00
set $color_back #000000
set $color_border #555555

set $i3home ~/.config/i3/

# font FontAwesome 12
font pango:Hack 12, FontAwesome 12

# Use Mouse+$mod to drag floating windows to their wanted position
floating_modifier $mod

# start a terminal
bindsym $mod+Return exec gnome-terminal

# start a browser
bindsym $mod+Shift+Return exec chromium-browser


# kill focused window
bindsym $mod+Shift+q kill

# start dmenu (a program launcher)
bindsym $mod+space exec dmenu_run

# split in horizontal orientation
bindsym $mod+i split h

# split in vertical orientation
bindsym $mod+Shift+i split v

# change container layout (tabbed, toggle split)
bindsym $mod+colon layout tabbed
bindsym $mod+Shift+colon layout toggle split

# enter fullscreen mode for the focused container
bindsym XF86LaunchA fullscreen toggle

# restart
bindsym XF86LaunchB restart

# change focus between tiling / floating windows
bindsym $mod+XF86LaunchA focus mode_toggle
# toggle tiling / floating
bindsym $mod+Shift+XF86LaunchA floating toggle

# focus the parent container
# bindsym $mod+p focus parent

# focus the child contai3 mod is altainer
# bindsym $mod+Shift+p focus child

# focus follows mouse
focus_follows_mouse no

# switch to workspace with urgent window automatically
for_window [urgent=latest] focus

# Popups during fullscreen mode
popup_during_fullscreen smart

# move focused window
bindsym $mod+Shift+h move left
bindsym $mod+Shift+l move right
bindsym $mod+Shift+j move down
bindsym $mod+Shift+k move up

# change focus
set $i3_nav_cli ~/.local/share/nvim/plugged/nvim-i3focus/client.py
set $i3_nav_server ~/.local/share/nvim/plugged/nvim-i3focus/server.py
bindsym $mod+h focus left
bindsym $mod+j focus down
bindsym $mod+k focus up
bindsym $mod+l focus right
#bindsym $mod+h exec "$i3_nav_cli focus left"
#bindsym $mod+j exec "$i3_nav_cli focus down"
#bindsym $mod+k exec "$i3_nav_cli focus up"
#bindsym $mod+l exec "$i3_nav_cli focus right"
bindsym $mod+Shift+r mode "resize"
mode "resize" {
  bindsym $mod+h focus left
  bindsym $mod+j focus down
  bindsym $mod+k focus up
  bindsym $mod+l focus right
  #bindsym $mod+h exec "$i3_nav_cli focus left"
  #bindsym $mod+j exec "$i3_nav_cli focus down"
  #bindsym $mod+k exec "$i3_nav_cli focus up"
  #bindsym $mod+l exec "$i3_nav_cli focus right"
  bindsym h resize grow width 5 px
  bindsym j resize shrink height 5 px
  bindsym k resize grow height 5 px
  bindsym l resize shrink width 5 px
  #bindsym h exec "$i3_nav_cli resize h"
  #bindsym j exec "$i3_nav_cli resize j"
  #bindsym k exec "$i3_nav_cli resize k"
  #bindsym l exec "$i3_nav_cli resize l"
  # back to normal: Enter or Escape
  bindsym Return mode "default"
  bindsym Escape mode "default"
}
exec --no-startup-id $i3_nav_server

# switch to workspace
workspace_auto_back_and_forth no
bindsym $mod+1 workspace $workspace1
bindsym $mod+2 workspace $workspace2
bindsym $mod+3 workspace $workspace3
bindsym $mod+4 workspace $workspace4
bindsym $mod+5 workspace $workspace5
