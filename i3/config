bindsym $mod+Shift+9 move container to workspace $workspace9
bindsym $mod+Shift+0 move container to workspace $workspace10

# BAR #
bar {
  status_command py3status -b -c ~/.config/i3/i3status.conf
  strip_workspace_numbers yes
  tray_output primary
  position top
  separator_symbol "|"

  # disable scroll
  bindsym button4 nop
  bindsym button5 nop

  colors {
    separator            $color_border
    background           $color_back
    #we shouldn't see this
    statusline           $color_bad
                         #<border>         <bg>              <text>
    focused_workspace    $color_back $color_back $color_good
    active_workspace     $color_back $color_back $color_degraded
    urgent_workspace     $color_back $color_back $color_bad
    inactive_workspace   $color_back $color_back $color
  }
}

# class                 border      backgr.     text   indicator
client.focused          $color_border $color_border $color $color_back
client.focused_inactive $color_back $color_back $color $color_border
client.unfocused        $color_back $color_back $color $color_border
client.urgent           $color_bad  $color_bad  $color $color_border

client.background       $color_back

# bar toggle, hide or show
bindsym $mod+b bar mode toggle

# DUAL SCREEN #

set $firstMonitor eDP1
