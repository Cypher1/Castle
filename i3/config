# AUDIO #
set $AUDIO default
bindsym XF86AudioRaiseVolume exec "amixer -D '$AUDIO' sset Master '5%+' && pkill -SIGUSR1 py3status"
bindsym XF86AudioLowerVolume exec "amixer -D '$AUDIO' sset Master '5%-' && pkill -SIGUSR1 py3status"
bindsym $mod+XF86AudioRaiseVolume exec "amixer -D '$AUDIO' sset Master '1%+' && pkill -SIGUSR1 py3status"
bindsym $mod+XF86AudioLowerVolume exec "amixer -D '$AUDIO' sset Master '1%-' && pkill -SIGUSR1 py3status"
bindsym XF86AudioMute exec "amixer -D '$AUDIO' set Master toggle && pkill -SIGUSR1 py3status"

# BRIGHTNESS #
bindsym XF86MonBrightnessUp exec "xbacklight + 10"
bindsym XF86MonBrightnessDown exec "xbacklight - 10"
bindsym $mod+XF86MonBrightnessUp exec "xbacklight + 1"
bindsym $mod+XF86MonBrightnessDown exec "xbacklight - 1"

bindsym XF86KbdBrightnessUp exec "sudo keyboard-backlight up 10"
bindsym XF86KbdBrightnessDown exec "sudo keyboard-backlight down 10"
bindsym $mod+XF86KbdBrightnessUp exec "sudo keyboard-backlight up 1"
bindsym $mod+XF86KbdBrightnessDown exec "sudo keyboard-backlight down 1"
# BORDER #
new_window pixel 0

