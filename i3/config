# BAR #
bar {
    status_command nix-shell -p python35Packages.pytz python35Packages.tzlocal python35Packages.i3ipc --run "py3status -b -c $i3home/i3status.conf"
    strip_workspace_numbers yes
    tray_output primary
    position top
    separator_symbol "|"

# disable scroll
    bindsym button4 nop
    bindsym button5 nop

    colors {
      separator            $color_border
        background           $color_back
#we shouldn't see this
        statusline           $color_bad
#<border>         <bg>              <text>
        focused_workspace    $color_back $color_back $color_good
        active_workspace     $color_back $color_back $color_degraded
        urgent_workspace     $color_back $color_back $color_bad
        inactive_workspace   $color_back $color_back $color
    }
}

# class                 border        backgr.       text   indicator
client.focused          $color_back   $color_back   $color $color_back
client.focused_inactive $color_border $color_back   $color $color_back
client.unfocused        $color_border $color_back   $color $color_back
client.urgent           $color_border $color_bad    $color $color_back

client.background       $color_back

# bar toggle, hide or show
bindsym $mod+b bar mode toggle

# DUAL SCREEN #

