# COLOURS #
set $color #FFFFFF
set $color_good #00FF00
set $color_bad #FF0000
set $color_degraded #FFFF00
set $color_back #232323
set $color_border #555555

font pango:Hack 4, FontAwesome 4

# Use Mouse+$mod to drag floating windows to their wanted position
floating_modifier $mod

# start a terminal
bindsym $mod+Return exec i3-sensible-terminal

# start a browser
bindsym $mod+Shift+Return exec google-chrome


# kill focused window
bindsym $mod+Shift+q kill

# start dmenu (a program launcher)
bindsym $mod+space exec dmenu_run

# split in horizontal orientation
bindsym $mod+i split h

# split in vertical orientation
bindsym $mod+Shift+i split v

# change container layout (stacked, tabbed, toggle split)
bindsym $mod+e layout toggle split

# enter fullscreen mode for the focused container
bindsym XF86LaunchA fullscreen toggle

# restart
bindsym XF86LaunchB restart

# toggle tiling / floating
bindsym $mod+Shift+XF86LaunchA floating toggle

# change focus between tiling / floating windows
bindsym $mod+XF86LaunchA focus mode_toggle

# focus the parent container
# bindsym $mod+p focus parent

# focus the child container
# bindsym $mod+Shift+p focus child

# focus follows mouse
focus_follows_mouse no

# switch to workspace with urgent window automatically
for_window [urgent=latest] focus

# Popups during fullscreen mode
popup_during_fullscreen smart

# change focus
#bindsym $mod+h focus left
