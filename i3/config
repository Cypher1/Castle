# MODE_SYSTEM #

bindsym $mod+Shift+r mode "resize"

# resize window (you can also use the mouse for that)
mode "resize" {
  # Resize mode (hjkl)
  bindsym h resize shrink width 10 px or 10 ppt
  bindsym l resize grow width 10 px or 10 ppt
  bindsym j resize shrink height 10 px or 10 ppt
  bindsym k resize grow height 10 px or 10 ppt

  # back to normal: Enter or Escape
  bindsym Return mode "default"
  bindsym Escape mode "default"
}

bindsym $mod+XF86LaunchB exec "~/.config/i3/i3exit.sh `echo 'lock\nsuspend\nshutdown' | dmenu -p 'Power'`"

# AUDIO #
bindsym XF86AudioRaiseVolume exec "amixer -D pulse sset Master '5%+' && killall -SIGUSR1 py3status"
bindsym XF86AudioLowerVolume exec "amixer -D pulse sset Master '5%-' && killall -SIGUSR1 py3status"
bindsym $mod+XF86AudioRaiseVolume exec "amixer -D pulse sset Master '1%+' && killall -SIGUSR1 py3status"
bindsym $mod+XF86AudioLowerVolume exec "amixer -D pulse sset Master '1%-' && killall -SIGUSR1 py3status"
bindsym XF86AudioMute exec "amixer -D pulse set Master toggle && killall -SIGUSR1 py3status"

# BRIGHTNESS #
bindsym XF86MonBrightnessUp exec "xbacklight + 10"
bindsym XF86MonBrightnessDown exec "xbacklight - 10"
bindsym $mod+XF86MonBrightnessUp exec "xbacklight + 1"
bindsym $mod+XF86MonBrightnessDown exec "xbacklight - 1"

# BORDER #
new_window pixel 1
