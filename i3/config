# i3 config file (v4)

# EXECUTE #
# Set up KEYS
exec --no-startup-id google-drive-ocamlfuse ~/Drive || true &
exec_always bash ~/.config/Keys

# num lock activated
exec_always --no-startup-id numlockx on
exec_always --no-startup-id feh --bg-fill ~/Drive/Me/Pictures/firewatch.jpg
# exec insync-headless start
# get the mouse out of the way with unclutter
exec unclutter

# Setup wakeup
exec --no-startup-id sudo /home/cypher/.config/bin/wakeup 2&> /tmp/wakeup_log

# SCREENSHOTS #
bindsym Print exec scrot '%Y-%m-%d-%s_screenshot_$wx$h.jpg' -e 'mv $f ~/Pictures/'
bindsym Control+Print exec gnome-screenshot -i



set $mod Control
